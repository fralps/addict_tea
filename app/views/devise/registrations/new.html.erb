<section class="form">
  <div class="login-form">
    <div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <h2>Inscription</h2>
      <hr>
      
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="txtb">
        <%= f.text_field :first_name, autocomplete: "first_name", placeholder: "Prénom" %>
      </div>

      <div class="txtb">
        <%= f.label " " %><br />
        <%= f.text_field :last_name, autocomplete: "last_name", placeholder: "Nom" %>
      </div>

      <div class="txtb">
        <%= f.label " " %><br />
        <%= f.email_field :email, autocomplete: "email", placeholder: "Email" %>
      </div>

      <div class="txtb">
        <%= f.label " " %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Mot de passe (6 caractères minimum)" %>
      </div>

      <div class="txtb">
        <%= f.label " " %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmation de mot de passe" %>
      </div>

      <div class="actions">
        <%= f.submit "Je m'inscris", class: "logbtn" %>
      </div>
      <% end %>
    </div>
    <div class="bottom-text">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
